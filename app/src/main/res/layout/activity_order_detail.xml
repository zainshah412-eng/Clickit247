<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/toolbar_bg"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/RobotoBoldTextAppearance">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:cardElevation="@dimen/space_3"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">
                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="@string/status"
                            android:textColor="@color/contact_number"
                            android:textSize="15dp"
                            />
                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_order_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:gravity="end"
                            android:textAlignment="textEnd"
                            android:paddingBottom="@dimen/space_8"
                            android:textColor="@color/colorAccent"
                            android:textSize="13dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="@string/order_id"
                            android:textColor="@color/contact_number"
                            android:textSize="15dp"
                            />
                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_order_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            android:layout_weight="1.3"
                            android:text="ID"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorAccent"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="@string/place_on"
                            android:textColor="@color/contact_number"
                            android:textSize="15dp"
                            />

                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_order_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            android:layout_weight="1.3"
                            android:text="Date"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAccent"
                            android:textSize="13dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="@string/time_t"
                            android:textColor="@color/contact_number"
                            android:textSize="15dp"                        />

                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_order_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_4"
                            android:layout_weight="1.3"
                            android:text="time"
                            android:textSize="13dp"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">


                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/tt_t"
                            android:textColor="@color/contact_number"
                            android:layout_weight="0.7"
                            android:textSize="15dp"                        />

                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_order_item"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1.3"
                            android:text="T.Item"
                            android:textAlignment="textEnd"
                            android:textSize="13dp"
                            android:textColor="@color/colorAccent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="0.7"
                            android:text="@string/rec_nm"
                            android:textColor="@color/contact_number"
                            android:textSize="15dp" />

                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_recivername"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAccent"
                            android:textSize="13dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:text="@string/rec_num1"
                            android:textColor="@color/contact_number"
                            android:textSize="15dp" />

                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_recivernmobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorAccent"
                            android:textSize="13dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.gogrocerdb.tcc.util.CustomBoldTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Address: "
                            android:textColor="@color/contact_number"
                            android:textSize="15dp" />

                        <com.gogrocerdb.tcc.util.CustomTextView
                            android:id="@+id/tv_societyname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:layout_marginLeft="@dimen/space_4"
                            android:textAlignment="textEnd"
                            android:text=""
                            android:textColor="@color/colorAccent"
                            android:textSize="13dp" />

                        <!--   <com.gogrocerdb.tcc.Fonts.LatoBLack
                               android:layout_width="0dp"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/space_7"
                               android:layout_weight="1"
                               android:text="@string/hus_n"
                               android:visibility="gone"
                               android:textColor="@color/contact_number"
                               android:textSize="@dimen/text_size_small" />-->

                        <!-- <com.gogrocerdb.tcc.Fonts.LatoBLack
                             android:id="@+id/tv_house"
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="@dimen/space_4"
                             android:layout_weight="0"
                             android:text=""
                             android:textColor="@color/colorAccent" />-->

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@color/gray" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_10">


                    <com.gogrocerdb.tcc.util.CustomBoldTextView
                        android:id="@+id/tv_order_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:text="@string/pr"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_large" />

                    <com.gogrocerdb.tcc.util.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:id="@+id/start_navigation"
                        android:background="@drawable/round_button1"
                        android:text="Start Navigation"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.gogrocerdb.tcc.util.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Including delivery charges: "
                        android:textColor="@color/contact_number"
                        android:textSize="15dp" />

                    <com.gogrocerdb.tcc.util.CustomTextView
                        android:id="@+id/delivery_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_8"
                        android:text="charges"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.gogrocerdb.tcc.util.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tracking_st"
                        android:textColor="@color/contact_number"
                        android:textSize="15dp" />

                    <com.gogrocerdb.tcc.util.CustomTextView
                        android:id="@+id/tracking_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_8"
                        android:text="Date"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorAccent"
                        android:textSize="13dp" />

                </LinearLayout>

                <!--        <RelativeLayout
                            android:layout_width="210dp"
                            android:layout_height="38dp"
                            android:layout_marginLeft="@dimen/space_10"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_14"
                            android:background="@drawable/bg_rounded_button"
                            android:padding="12dp">

                            <com.gogrocerdb.tcc.util.CustomBoldTextView
                                android:id="@+id/status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#fff"
                                android:textSize="@dimen/text_size_small" />


                        </RelativeLayout>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_18"
                    android:background="@color/gray" />


                <RelativeLayout
                    android:id="@+id/btn_mark_delivered"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_rounded_button"
                    android:padding="12dp">

                    <com.gogrocerdb.tcc.util.CustomBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:id="@+id/delivery_text"
                        android:text="@string/mark"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_size_normal" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</LinearLayout>